<config>
    <param name="environment">@ENV@</param>
    <param name="app.code">@APP@</param>
    <param name="svn.tag">@SVN@</param>

    <!-- Begin common config -->
    <param name="build.environment">${environment}</param>
    <param name="version">5.1</param>
    <param name="rice.environment">${environment}</param>

    <param name="module.name">kc</param>
    <param name="service.namespace">KC</param>
    <param name="app.namespace">kc</param>

    <param name="application.id">KC</param>
    <param name="application.host">https://onestart.iu.edu</param>
    <param name="kc.port"></param>
    <param name="production.environment.code">PRD</param>

    <param name="application.url">${application.host}/${app.code}-${environment}</param>
    <param name="secureServiceServletUrl">${application.url}/remoting/</param>
    <param name="serviceServletUrl">${secureServiceServletUrl}</param>
    <param name="dev.mode">false</param>

    <!-- These are the recommended Rice defaults -->
    <param name="kr.mode">LOCAL</param>
    <param name="kns.mode">LOCAL</param>
    <param name="kcb.mode">REMOTE</param>
    <param name="kim.mode">EMBEDDED</param>
    <param name="kew.mode">EMBEDDED</param>
    <param name="ken.mode">REMOTE</param>
    <param name="krms.mode">REMOTE</param>
    <param name="ksb.mode">REMOTE</param>
    <param name="location.mode">REMOTE</param>
    <param name="core.mode">LOCAL</param>
    <param name="coreservice.mode">REMOTE</param>

    <param name="rice.server.url">https://uisapp2.iu.edu/kr-${rice.environment}</param>
    <param name="rice.app.url">${rice.server.url}</param>
    <param name="rice.ksb.registry.serviceUrl">https://uisapp2.iu.edu/ksb-${rice.environment}/remoting/soap/ksb/v2_0/serviceRegistry</param>
    <param name="rice.ksb.serviceRegistry.security">true</param>
    <param name="rice.ksb.config.allowSelfSignedSSL">false</param>
    <param name="rice.ksb.batch.mode">false</param>

    <param name="oneStart.portal.mode">false</param>
    <param name="oneStart.portal.redirection.url">${application.url}/close.jsp</param>

    <param name="externalizable.help.url">http://researchadmin.iu.edu/EO/AppHelp/KC/</param>
    <param name="externalizable.images.url">${rice.server.url}/kr/static/images/</param>
    <param name="kr.externalizable.images.url">${rice.server.url}/kr/static/images/</param>
    <param name="kra.externalizable.images.url">/${app.context.name}/static/images/</param>

    <param name="kr.url">${rice.server.url}/kr</param>
    <param name="ken.url">${rice.server.url}/ken</param>
    <param name="kew.url">${rice.server.url}/kew</param>
    <param name="kim.url">${rice.server.url}/kim</param>
    <param name="ksb.url">${rice.server.url}/ksb</param>
    <param name="rice.url">${rice.server.url}/kr</param>
    <param name="workflow.url">${kew.url}</param>
    <param name="kuali.docHandler.url.prefix">${application.url}</param>

    <!-- Java mail properties -->
    <param name="mail.from">kc-admin-l@list.iu.edu</param>
    <param name="mail.transport.protocol">smtps</param>
    <param name="mail.smtp.starttls.enable">true</param>
    <param name="mail.smtp.host">mail-relay.iu.edu</param>
    <param name="mail.smtp.port">465</param>
    <param name="mail.smtps.auth">true</param>
    <param name="mail.user.credentials">${mail.smtp.password}</param>
    <param name="mail.smtp.user">${mail.smtp.username}</param>

    <!-- image overrides -->
    <param name="application.custom.image.url.copyoneper">/${app.context.name}/static/images/buttonsmall_copyallperiods.gif</param>
    <param name="application.custom.image.url.copyallperiods">/${app.context.name}/static/images/buttonsmall_copyoneper.gif</param>

    <!-- IU CAS Config -->
    <param name="filter.login.class">edu.iu.uis.cas.filter.CASFilter</param>
    <param name="filter.login.cassvc">IU</param>
    <param name="filter.login.loginURL">${cas.url}/login</param>
    <param name="filter.login.validationURL">${cas.url}/serviceValidate</param>
    <param name="filtermapping.login.1">/*</param>


    <!-- For IU Rice -->
    <!-- Turn off KEW use of quartz db to avoid db clear issues -->
    <param name="useQuartzDatabase">false</param>

    <param name="message.delivery">asynchronous</param>
    <param name="rice.kew.enableKENNotification">false</param>

    <!-- Configuration for Exception Incident handling and reporting -->
    <param name="KualiExceptionHandlerAction.EXCEPTION_INCIDENT_REPORT_SERVICE">knsExceptionIncidentService</param>
    <param name="kr.incident.mailing.list">BL-UITS-Research_Admin_Systems@exchange.iu.edu</param>
    <param name="KualiExceptionIncidentServiceImpl.REPORT_MAIL_LIST">BL-UITS-Research_Admin_Systems@exchange.iu.edu</param>
    <param name="mail.relay.server">mail-relay.indiana.edu</param>

    <param name="enhanced.identity.service.active">true</param>
    <param name="print.logging.enable">false</param>

    <!--  kc/kfs integration config -->
    <param name="fin.system.integration.service.url">${application.host}/kfs-${environment}/remoting/</param>
    <param name="shared.rice">true</param>
    <param name="kfs.integration.bus.security.enabled">true</param>
    <param name="fin.system.integration.bus.security.on">${kfs.integration.bus.security.enabled}</param>

    <param name="kc.custom.mode">LOCAL</param>

    <param name="context.names.kc">${app.code}-${environment}</param>
    <param name="context.names.rice">kr-${rice.environment}</param>

    <param name="kns.editable.properties.history.size">200</param>
    <!-- End common config -->

    <!-- For showing/hiding IRB phase 4 sections. This can be removed post-p3 release. -->
    <param name="kcirb.display.p4">false</param>

    <param name="security.dir">/opt/j2ee/security/${app.code}/${environment}</param>
    <param name="config.location">${security.dir}/kc-security.xml</param>
    <param name="settings.dir">/opt/j2ee/settings/${app.code}/${environment}</param>
    <param name="config.location">${settings.dir}/kc-settings.xml</param>

    <param name="kc.schemaspy.enabled">false</param>
    <param name="kc.monitoring.enabled">true</param>
</config>
